<div class="mt-4">
    <div class="card-deck">
         {{#each courses}}
        <div class="card">
            <a href="/course/{{this.slug}}">
                  <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
            </a>
            <div class="card-body">
                <a href="/course/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
            <p class="card-text">{{this.description}}</p>
            </div>
            <div class="card-footer">
            <button class="btn btn-primary">Mua khóa học</button>
            </div>
        </div>
         {{/each}}
    </div>
</div>
<a href="/course/creat" class="mt-4  btn btn-danger">Thêm khóa học</a>
